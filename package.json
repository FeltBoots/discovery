{
    "name": "@discoveryjs/discovery",
    "version": "1.0.0-beta.31",
    "description": "Hackable JSON discovery tool",
    "author": "Roman Dvornov <rdvornov@gmail.com> (https://github.com/lahmatiy)",
    "license": "MIT",
    "repository": "discoveryjs/discovery",
    "keywords": [],
    "main": "dist/discovery.umd.js",
    "unpkg": "dist/discovery.umd.js",
    "jsdelivr": "dist/discovery.umd.js",
    "browser": {
        "/gen/jora.js": "./dist/gen/jora.js",
        "/gen/hitext": "./dist/gen/hitext.js",
        "/gen/hitext-prismjs": "./dist/gen/hitext-prismjs.js",
        "/gen/prismjs": "./dist/gen/prismjs.js",
        "/gen/codemirror": "./dist/gen/codemirror.js"
    },
    "scripts": {
        "lint": "eslint libs scripts src",
        "tsc": "rimraf dist && cpx 'src/**/*.css' dist && tsc || true",
        "build": "npm run tsc && npm run build:esm && npm run build:css",
        "build-docs": "npm run build && discovery-build -o docs",
        "build:esm": "npm run build:umd && node scripts/convert-lib-to-es6",
        "build:umd": "node scripts/build-client-libs && browserify output/lib.js --standalone discovery --im -t [ babelify --presets [ @babel/preset-env ] ] | terser --compress --mangle -o dist/discovery.umd.js",
        "build:css": "node scripts/build-css",
        "prepublishOnly": "npm run build"
    },
    "engines": {
        "node": ">=8.0.0"
    },
    "dependencies": {
        "codemirror": "^5.52.2",
        "hitext": "^1.0.0-alpha.2",
        "hitext-prismjs": "^1.0.2",
        "jora": "1.0.0-alpha.13",
        "prismjs": "^1.19.0"
    },
    "devDependencies": {
        "@babel/core": "^7.9.0",
        "@babel/preset-env": "^7.9.0",
        "@discoveryjs/cli": "^1.5.0",
        "babelify": "^10.0.0",
        "browserify": "^16.5.0",
        "cpx": "^1.5.0",
        "eslint": "^6.8.0",
        "rimraf": "^3.0.2",
        "terser": "^4.6.7",
        "typescript": "^3.8.3"
    },
    "files": [
        "dist",
        "libs"
    ]
}
